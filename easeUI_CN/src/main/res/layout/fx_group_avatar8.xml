<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:background="#DBDFE0"
    android:padding="1dp">
    <View
        android:id="@+id/iv_temp"
        android:layout_width="2dp"
        android:layout_height="14dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp" />

    <ImageView
        android:id="@+id/iv_avatar1"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_toLeftOf="@+id/iv_temp"
        android:src="@drawable/fx_default_useravatar" />

    <ImageView

        android:id="@+id/iv_avatar2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/iv_temp"
        android:src="@drawable/fx_default_useravatar" />

    <ImageView
        android:id="@+id/iv_avatar3"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_avatar2"

        android:src="@drawable/fx_default_useravatar" />

    <ImageView
        android:id="@+id/iv_avatar4"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_below="@+id/iv_avatar2"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv_avatar3"
        android:src="@drawable/fx_default_useravatar" />

    <ImageView
        android:id="@+id/iv_avatar5"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_below="@+id/iv_avatar2"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv_avatar4"
        android:src="@drawable/fx_default_useravatar" />

    <ImageView
        android:id="@+id/iv_avatar6"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/iv_avatar4"

        android:layout_marginTop="2dp"
        android:src="@drawable/fx_default_useravatar" />

    <ImageView
        android:id="@+id/iv_avatar7"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_below="@id/iv_avatar5"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_avatar6"
        android:src="@drawable/fx_default_useravatar" />

    <ImageView
        android:id="@+id/iv_avatar8"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_below="@id/iv_avatar5"

        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_avatar7"
        android:src="@drawable/fx_default_useravatar" />
</RelativeLayout>
